	<h3> Reserve A Room</h3> 
	<%= form_for @userrr, :url =>{:action => :create} do |f| %>
		<label for="event_name">Event Name:</label><br />
		<%=text_field :name, :size => 10%><br />
		
		<label for="event_location">Location:</label><br />
		<%=select_tag(:locations, options_for_select(["Chapter Room", 
			"Music Room", "IRDF Room", "Center Room", "Room 57"]))%><br />
		<table>
		<tr>
		<td>
		<label for="dp1">Start Date:</label><br/>
		<input type="text" id="m1" name="m1" maxlength="2" class="m"/> /
		<input type="text" id="d1" name="d1" maxlength="2" class="d"/> /
		<input type="text" id="y1" name="y1" maxlength="4" class="y"/><br/>
       <script type="text/javascript">
		// <![CDATA[ 	   
        var opts = {                            
                formElements:{"y1":"Y", "m1":"m", "d1":"d"} ,
				//statusFormat:"l-cc-sp-d-sp-F-sp-Y",
				//staticPos:true,
				constrainSelection:false,
				finalOpacity:100
        };        
        datePickerController.createDatePicker(opts);
		var myJSON = {"mousewheel":false};
		datePickerController.setGlobalVars(myJSON);
		var now=new Date();
		datePickerController.setSelectedDate("y1",now.format("yyyymmdd"));
		datePickerController.dateValidForSelection("y1", now);
		// ]]>
      </script>
	  <label for="event_time_start">Start Time:</label><br/>
	  <input type="text" id="timestart1" name="timestart1" maxlength="2" class="m"/> :
	  <input type="text" id="timestart2" name="timestart2" maxlength="2" class="m"/>
	  <%=select_tag(:timestart3, options_for_select(["am","pm"]))%><br />
	  </td>
	  <td id="spacer">
	  </td>
	  
	  <td>
	  <label for="dp2">End Date:</label><br/>
	  <input type="text" id="m2" name="m2" maxlength="2" class="m"/> /
		<input type="text" id="d2" name="d2" maxlength="2" class="d"/> /
		<input type="text" id="y2" name="y2" maxlength="4" class="y"/><br/>
       <script type="text/javascript">
		// <![CDATA[ 	   
        var opts = {                            
                formElements:{"y2":"Y", "m2":"m", "d2":"d"} ,
				//statusFormat:"l-cc-sp-d-sp-F-sp-Y",
				//staticPos:true,
				constrainSelection:false,
				finalOpacity:100
        };        
        datePickerController.createDatePicker(opts);
		var myJSON = {"mousewheel":false};
		datePickerController.setGlobalVars(myJSON);
		var now=new Date();
		datePickerController.setSelectedDate("y2",now.format("yyyymmdd"));
		datePickerController.dateValidForSelection("y2", now);
		// ]]>
      </script>
	  <label for="event_time_end">End Time:</label><br/>
		<input type="text" id="timeend1" name="timeend1" maxlength="2" class="m"/> :
	  <input type="text" id="timeend2" name="timeend2" maxlength="2" class="m"/>
	  <%=select_tag(:timeend3, options_for_select(["am","pm"]))%><br />
	  </td>
	  </tr>
	  </table>
			
		<label for="event_description">Description:</label><br/>
		<%=text_field :descr, :size=> 20%><br />
		<%=f.submit "Submit"%>
	<%end%>