<%= form_for(@user_session) do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user_session from being saved:</h2>

      <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	<table id="login_table" cellspacing="10">
		<colgroup/>
		<colgroup/>
		<tr><th colspan="2" id="login_header">Login</th></tr>
		<tr>
			<td><%= f.label :username %>: </td>
			<td><%= f.text_field :username, :size=>18 %>
		</tr>
  </div>
  <div class="field">
		<tr>
			<td><%= f.label :password %>: </td>
			<td><%= f.password_field :password, :size=>18 %></td>
		</tr>
  </div>

  <div class="actions">
	<tr><td/><td>
    <%= f.submit "Login" %></td>
  </div>
<% end %>
